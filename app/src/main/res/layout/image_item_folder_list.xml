<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image_sel_color_menu_text"
    android:minHeight="@dimen/image_folder_height"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/layout_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null" >

        <ImageView
            android:id="@+id/image_ddr_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/image_empty" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/layout_image_icon"
        android:gravity="center|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_ddr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有图片"
            android:textColor="#444444"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_ddr_file_conut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2张"
            android:textColor="#bbbbbb"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_ddr_checked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:src="@drawable/btn_check_buttonless_on" />

</RelativeLayout>